<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>StudentLoginServlet</servlet-name>
        <servlet-class>servlet.StudentLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentLoginServlet</servlet-name>
        <url-pattern>/studentLogin</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>StudentInfoServlet</servlet-name>
        <servlet-class>servlet.StudentInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentInfoServlet</servlet-name>
        <url-pattern>/studentInfo</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ListSinglePersonPrizeServlet</servlet-name>
        <servlet-class>servlet.ListSinglePersonPrizeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListSinglePersonPrizeServlet</servlet-name>
        <url-pattern>/listSinglePersonPrize</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PrizeEditServlet</servlet-name>
        <servlet-class>servlet.PrizeEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrizeEditServlet</servlet-name>
        <url-pattern>/editPrize</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PrizeUpdateServlet</servlet-name>
        <servlet-class>servlet.PrizeUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrizeUpdateServlet</servlet-name>
        <url-pattern>/updatePrize</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PrizeDeleteServlet</servlet-name>
        <servlet-class>servlet.PrizeDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrizeDeleteServlet</servlet-name>
        <url-pattern>/deletePrize</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PrizeAddServlet</servlet-name>
        <servlet-class>servlet.PrizeAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrizeAddServlet</servlet-name>
        <url-pattern>/addPrize</url-pattern>
    </servlet-mapping>

    <filter>
      <filter-name>EncodingFilter</filter-name>
      <filter-class>filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>EncodingFilter</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>

